cabal-version:       2.4
name:                hibet
version:             0.7
description:         tibetan-english translator
synopsis:            translator
homepage:            https://github.com/willbasky/Hibet
bug-reports:         https://github.com/willbasky/Hibet/issues
license:             MIT
license-file:        LICENSE
author:              willbasky
maintainer:          willgame(at)mail(dot)ru
copyright:           2020 willbasky
category:            Utility
build-type:          Simple
extra-doc-files:     README.md
                   , CHANGELOG.md
data-files:          dicts/*.txt
                   , stuff/titles.toml
                   , stuff/tibetan-syllables

source-repository head
  type:                git
  location:            https://github.com/willbasky/Hibet.git

library
  hs-source-dirs:      src
  exposed-modules:
                       App
                       Cli
                       Hibet.Interpretator
                       Hibet.Language
                       Labels
                       Parse
                       Pretty
                       Translate
                       Types

  other-modules:       Paths_hibet

  ghc-options:         -Wall
                       -Wincomplete-uni-patterns
                       -Wincomplete-record-updates
                       -Wcompat
                       -Widentities
                       -Wredundant-constraints
                       -fhide-source-paths
                       -Wmissing-export-lists
                       -Wpartial-fields

  build-depends:       base ^>= 4.13.0.0
                     , bytestring
                     , containers
                     , directory
                     , file-embed
                     , filepath
                     , free
                     , gitrev
                     , haskeline
                     , megaparsec
                     , mtl
                     , neat-interpolation
                     , optparse-applicative
                     , pager
                     , parsers-megaparsec
                     , path
                     , path-io
                     , prettyprinter
                     , prettyprinter-ansi-terminal
                     , radixtree
                     , terminal-size
                     , text
                     , tomland
                     , unordered-containers

  default-language:    Haskell2010
  default-extensions:  DeriveGeneric
                       LambdaCase
                       OverloadedStrings
                       RecordWildCards
                       ScopedTypeVariables
                       TypeApplications


executable hibet
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -Wall
                       -threaded
                       -rtsopts
                       -with-rtsopts=-N
                       -Wincomplete-uni-patterns
                       -Wincomplete-record-updates
                       -Wcompat
                       -Widentities
                       -Wredundant-constraints
                       -fhide-source-paths
                       -Wmissing-export-lists
                       -Wpartial-fields
  build-depends:       base ^>= 4.13.0.0
                     , hibet

  default-language:    Haskell2010
  default-extensions:  DeriveGeneric
                       LambdaCase
                       OverloadedStrings
                       RecordWildCards
                       ScopedTypeVariables
                       TypeApplications


test-suite hibet-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  ghc-options:         -Wall
                       -threaded
                       -rtsopts
                       -with-rtsopts=-N
                       -Wincomplete-uni-patterns
                       -Wincomplete-record-updates
                       -Wcompat
                       -Widentities
                       -Wredundant-constraints
                       -fhide-source-paths
                       -Wmissing-export-lists
                       -Wpartial-fields
  build-depends:       base ^>= 4.13.0.0
                     , hibet

  default-language:    Haskell2010
  default-extensions:  DeriveGeneric
                       LambdaCase
                       OverloadedStrings
                       RecordWildCards
                       ScopedTypeVariables
                       TypeApplications

benchmark tibet-benchmark
  type:                exitcode-stdio-1.0
  hs-source-dirs:      benchmark
  main-is:             Main.hs

  build-depends:       base ^>= 4.13.0.0
                     , hibet
                     , async
                     , criterion
                     , weigh
                     , path
                     , path-io >= 1.4.0
                     , text
                     , streamly
                     , unordered-containers
                     , bytestring
                     , conduit
                     , file-embed

  other-modules:       Paths_hibet
                       Assets

  ghc-options:         -Wall
                       -threaded
                       -rtsopts
                       -with-rtsopts=-N
                       -Wincomplete-uni-patterns
                       -Wincomplete-record-updates
                       -Wcompat
                       -Widentities
                       -Wredundant-constraints
                       -fhide-source-paths
                       -Wmissing-export-lists
                       -Wpartial-fields

  default-language:    Haskell2010
  default-extensions:  RecordWildCards
                       OverloadedStrings
                       LambdaCase
                       ScopedTypeVariables
                       TypeApplications
                       TupleSections


